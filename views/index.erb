




<h1>Transactions</h1>

<p>Filter transactions:</p>
<form method="POST" action="/transactions/a/b/filter">
  <label
  for="first-input">From:
  </label>
  <input
    type="text"
    name="a"
    value="start date"
    id="first-input"/>
  <label
  for="first-input">To:
  </label>
  <input
    type="text"
    name="b"
    value="end date"
    id="first-input"/>
    <br>
    <div class="button">
      <input type="submit" value="Filter Results"/>
    </div>
</form>
<form method="GET" action="/transactions">
  <input type="submit" value="Cancel filter"/>
</form>





<table>
  <tr>
    <!-- <th>id #</th> -->
    <th>Item</th>
    <th>Price</th>
    <th>Merchant</th>
    <th>Category</th>
    <th>Date</th>
  </tr>
  <% for batman in @transactions %>
  <tr>
    <!-- <td><a href="/transactions/<%= batman.id %>"><%= batman.id %></a></td> -->
    <td><a href="/transactions/<%= batman.id %>"><%= batman.item %></a></td>
    <td><%= batman.price %></td>
    <td><a href="/merchants/<%= batman.merchant_id %>"> <%=  batman.merchant.name %></a> </td>
    <td><a href="/categories/<%= batman.category_id %>"> <%=  batman.category.name %></a> </td>
    <td><%= batman.date %></td>
  </tr>


  <% end %>
  <!-- <tr>
    <td></td>
    <td>Total:</td>
    <td><%= @total %></td>

  </tr> -->
  <tfoot>
    <th colspan="1">Total spent:</th>
    <td><%= @total %></td>
    <th colspan="3"> </th>
  </tfoot>
</table>
